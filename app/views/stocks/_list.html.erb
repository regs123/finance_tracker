<div class="row">
    <div class="col-9">
        <table class="table table-striped table-dark table-hover">
        <thead>
            <tr>
                <th scope="col">Ticker</th>
                <th scope="col">Name</th>
                <th scope="col">Last Price</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>

            <% @tracked_stocks.each do |stock| %>

            <tr>          
                <td><%= stock.ticker %></td>
                <td><%= stock.name %></td>
                <td><%= stock.last_price %></td>
                <td>Action</td>
            </tr>
            
            <% end %>
            
        </tbody>
        </table>
    </div>
</div>